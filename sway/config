# Alacritty color scheme toggling
# Set program location
input type:keyboard {
  xkb_layout "us(dvp),se"
  # Capslock key should work as escape key
  # See /usr/share/X11/xkb/rules/xorg.lst for options
  xkb_options "grp:ctrl_shift_toggle,ctrl:nocaps"

  repeat_delay 250
  repeat_rate 35
}

# capture all screens to clipboard    
bindsym $mod+Print exec grim - | wl-copy

# capture the specified screen area to clipboard    
bindsym $mod+Alt+Print exec grim -g "$(slurp)" - | wl-copy

bindsym $mod+Alt+Print+Shift exec grim -g "$(slurp)" ~/Pictures/$(date +'%H%M%S-%Y-%m-%d.png') 



